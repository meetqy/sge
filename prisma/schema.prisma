// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Poem {
    id      Int    @id @default(autoincrement())
    author  String
    title   String
    content String
    tags    Tag[]
}

model Tag {
    name  String @id @unique
    poems Poem[]
}
