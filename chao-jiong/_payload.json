[{"data":1,"prerenderedAt":1645},["Reactive",2],{"content-query-okF2zPXMGx":3,"content-navigation-8C37fagqQL":548},{"_path":4,"_dir":5,"_draft":6,"_partial":6,"_locale":5,"title":7,"children":8,"_id":544,"_type":545,"_source":546,"_file":547,"_extension":545},"/chao-jiong","",false,"晁逈",[9,15,23,29,37,44,53,60,69,75,82,94,103,114,122,129,137,145,153,161,170,181,187,193,199,205,211,217,223,231,237,243,249,255,263,271,277,283,289,295,301,309,317,325,330,336,341,347,352,364,378,384,392,400,408,413,419,424,429,434,439,444,449,454,459,464,469,474,479,484,489,494,499,504,509,514,519,524,529,534,539],{"title":10,"content":11,"tags":14},"靜中好",[12,13],"靜中好，冥心歸宴寂。","齋己不虛吟，靜是真消息。",[],{"title":16,"content":17,"tags":22},"靜深生四妙辭",[18,19,20,21],"了知入道門，先從靜爲祖。","靜勝則心安，安久虛靈府。","虛極發明靈，洞徹無不睹。","天然法樂多，豈比聞簫鼓。",[],{"title":24,"content":25,"tags":28},"有警辭",[26,27],"圖上華夷能盡記，未始經行一步地。","博聞强識總周知，心不能行亦如是。",[],{"title":30,"content":31,"tags":36},"三悟辭",[32,33,34,35],"若能覺其夢，且悟浮生如戲弄。","若能智其識，漸悟狂知枉心力。","若能性其情，大悟歸真即妙明。","喜得自然三悟法，書之聊以表研精。",[],{"title":38,"content":39,"tags":43},"書紳二法辭",[40,41,42],"心如常滿杯，所以明知足。","心似不燃火，所以明無欲。","二法可行持，書紳聊自勗。",[],{"title":45,"content":46,"tags":52},"超真獨覺辭",[47,48,49,50,51],"了達事終虛，往事何殊夢。","此後事來干，屹如山不動。","了達事終虛，往事今何在。","此後事來干，豁若空虛礙。","獨覺貴高奇，傑出羣迷外。",[],{"title":54,"content":55,"tags":59},"知常委順辭",[56,57,58],"紛然往事來，浮雲經大空。","喧然是非聲，驚飈觸灌叢。","古今無奈何，魏順於其中。",[],{"title":61,"content":62,"tags":68},"自爲觀照總持辭",[63,64,65,66,67],"事往終空，如雲如風。","事來不絕，如日如月攝。","念神凝，久習而成。","觸境情起，即時而止。","不可殫言，自當求理。",[],{"title":70,"content":71,"tags":74},"反本觀空無礙辭",[72,73],"形是幻，情是夢，寢興視息隨羣動。","當念元來一切無，豁然頓遣心中空。",[],{"title":76,"content":77,"tags":81},"簡求心要書紳辭",[78,79,80],"以靜制動，靜爲躁君。","以虛受有，虛緣葆真。","詳而後習，可書諸紳。",[],{"title":83,"content":84,"tags":93},"倣歸去來辭",[85,86,87,88,89,90,91,92],"陶令曾言歸去來，解印還家不迴首。","屏貴都遺身外名，忘憂酷嗜杯中酒。","白傅曾言歸去來，了知浮世非長久。","獨步逍遥自得場，飲食寢興隨所偶。","羅隠曾言歸去來，濩落生涯何所有。","明日船中竹一竿，要學江湖釣魚手。","晁叟亦言歸去來，抗表辭榮養衰朽。","京洛紅塵舊滿衣，總脫臨風都抖擻。",[],{"title":95,"content":96,"tags":102},"雙喻辭",[97,98,99,100,101],"人事常酌中，取象如敧器。","器平不敧覆，有同身爽利。","道心常不繫，取象如慮舟。","舟閒隨逝止，可比性優游。","能符雙喻者，何虛復何憂。",[],{"title":104,"content":105,"tags":113},"智斷身心辭",[106,107,108,109,110,111,112],"咨咨爾幻身，誰能住世久。","洪纖妍媿，豈長存而不朽。","咨咨爾幻心，常隨外物誘。","風生電滅，求其狀而何有。","豁然達理，忽洞見於天真。","未能無悶，或沃之以聖酒。","去鄉遊蕩久不歸，今覺窮途自迴首。",[],{"title":115,"content":116,"tags":121},"集句書紳自用辭",[117,118,119,120],"蒙以正，德而隠。","專於靜，遯於遯。","無是無非無所求，無名無迹無諸悶。","愚自書紳用此言，深心更與何人論。",[],{"title":123,"content":124,"tags":128},"洞心情境定心篇",[125,126,127],"物來誘之而不隨，物來觸之而不動。","不隨不動自由心，何須結社詢千衆。","萬事悠悠過即空，追思豈異春宵夢。",[],{"title":130,"content":131,"tags":136},"與道相知最樂篇",[132,133,134,135],"人多樂於親新相知，又多悲於生別離。","唯能與道相知久，如魚樂水無暌時。","樂道至樂非常樂，宜真造適潜熙怡。","逌然在心不在境，安能更與白雲期。",[],{"title":138,"content":139,"tags":144},"三法自然歌",[140,141,142,143],"心本不愆自然戒，何用科條心毀敗。","心本不動自然定，何用勤勞止自兢。","心本不迷自然慧，何用參尋叩倫類。","即今知此三自然，奉以周旋無失墜。",[],{"title":146,"content":147,"tags":152},"無有所求歌",[148,149,150,151],"無所求，擺落人間萬事休。","有所求，安養衰年樂聖猷。","不願竹木林內隠，不願蓮花社裏收。","願在清平仁壽域，含華守素得優游。",[],{"title":154,"content":155,"tags":160},"醒默居士歌",[156,157,158,159],"白氏先生躭醉吟，銜杯灑翰恣歡心。","樽空才盡若爲計，釋悶遣懷功未深。","愚稱居士名醒默，清思忘言求妙德。","習此功成道更高，不到詩魔兼酒惑。",[],{"title":162,"content":163,"tags":169},"并用存心微妙訣",[164,165,166,167,168],"處世間法，或伸或屈。","用觀察智，無固無必。","出世間法，勿違勿失。","用决定信，惟精惟一。","曲盡其妙，退藏於密。",[],{"title":171,"content":172,"tags":180},"四方觀練深心訣",[173,174,175,176,177,178,179],"性之生情，爲夢爲想。","性之生緣，如影如響。","不有古聖，愚將安仰。","不有妙道，愚將安倣。","爰得智刃，决開疑綱。","人不同心，超然獨往。","明融日新，率由天奬。",[],{"title":182,"content":183,"tags":186},"偈",[184,185],"心空如太空，豁然無可觸。","一真法界中，靈照常安住。",[],{"title":188,"content":189,"tags":192},"自警",[190,191],"清澄寂滅海，明浄涅槃天。","到此方知樂，休躭濁睡眠。",[],{"title":194,"content":195,"tags":198},"堅凝",[196,197],"了知起滅意，决定生死根。","不復隨緣轉，是名不動尊。",[],{"title":200,"content":201,"tags":204},"十魔軍",[202,203],"與道彌新世轉疏，老心恢廓學如初。","妄緣紛擾隨時過，雲物何曾礙碧虛。",[],{"title":206,"content":207,"tags":210},"造化因心偈",[208,209],"賦象各由心，影響無欺詐。","元無造化工，羣生自造化。",[],{"title":212,"content":213,"tags":216},"意不求如  其一",[214,215],"牢收長物金三品，密寫虛名墨一行。","失道信緣成苦趣，懵然流轉海茫茫。",[],{"title":218,"content":219,"tags":222},"意不求如  其二",[220,221],"風花榮落速，水月浄明深。","物物觀天理，資吾入道心。",[],{"title":224,"content":225,"tags":230},"禪道同功修養訣",[226,227,228,229],"心息相依，息調心靜。","靜調久久，可成勝定。","神氣相合，氣和神清。","清和久久，可致長生。",[],{"title":232,"content":233,"tags":236},"晚年勤道自修詩",[234,235],"老來何故惜分陰，如月明虧魄漸侵。","進道不遑求廣智，隨時隨處且冥心。",[],{"title":238,"content":239,"tags":242},"心禱六符詩",[240,241],"恬和端潔及虛明，六妙均融道法成。","願考此祥皆密契，不求知己浪傳名。",[],{"title":244,"content":245,"tags":248},"擬古人詩",[246,247],"今人學宴坐，不免尋思過。","欲免尋思過，但知學宴坐。",[],{"title":250,"content":251,"tags":254},"擬龐居士詩",[252,253],"人愛貴而富，我愛白而虛。","富貴榮辱會，虛白吉祥居。",[],{"title":256,"content":257,"tags":262},"擬白樂天詩  其一",[258,259,260,261],"求位不由己，求道不由天。","位即無以求，道可使進焉。","且務由己者，己能盡心源。","勿問由天者，天高擅化權。",[],{"title":264,"content":265,"tags":270},"擬白樂天詩  其二",[266,267,268,269],"順逆不由己，喜怒不由他。","他即無奈何，己可存太和。","且務由己者，克己諒誹多。","勿貴由他者，他心是我魔。",[],{"title":272,"content":273,"tags":276},"偈  其一",[274,275],"起滅心不停，生化形無數。","奇哉大丈夫，自在空中住。",[],{"title":278,"content":279,"tags":282},"偈  其二",[280,281],"一切是非藪，皆從外聽成。","我是厭聞者，反聽存靈響。",[],{"title":284,"content":285,"tags":288},"偈  其三",[286,287],"求聽存靈響，冥心合太虛。","清融浮想盡，名曰小無餘。",[],{"title":290,"content":291,"tags":294},"擬白樂天詩",[292,293],"權要亦有苦，苦在當憂責。","閑慢亦有樂，樂在無縈迫。",[],{"title":296,"content":297,"tags":300},"具足觀修訣",[298,299],"三空一不空，悟入勢孤雄。","得道加殊稱，超天自在公。",[],{"title":302,"content":303,"tags":308},"自曉存心訣",[304,305,306,307],"心息音，混融深。","智先覺，念無侵。","隨辦及，即溫尋。","用此法，存於心。",[],{"title":310,"content":311,"tags":316},"擬白樂天遣懷",[312,313,314,315],"羲和走馭趁年華，不許人間歲月賒。","春正艷陽春即老，日方停午日還斜。","時情莫測深如海，世事難齊亂似麻。","已共身心要約定，古今如此勿驚嗟。",[],{"title":318,"content":319,"tags":324},"擬白樂天題贈定光上人",[320,321,322,323],"孟子四十心不動，定光四十心離塵。","我到明年加一倍，如何此際尚因循。","已喜自逃名宦綱，猶患長隨造化鈞。","記得前賢有詩句，祖師元是世間人。",[],{"title":290,"content":326,"tags":329},[327,328],"心不擇時息，書不擇時觀。","達理意無礙，豁如天地寬。",[],{"title":331,"content":332,"tags":335},"詩一首",[333,334],"貌愚愚谷邃，道醉醉鄉春。","愚醉無迷謬，伊予意又新。",[],{"title":290,"content":337,"tags":340},[338,339],"自學養恬休用智，從他名迹日衰微。","我身不欲全高貴，高貴多乘禍敗機。",[],{"title":342,"content":343,"tags":346},"願成四勝深心偈",[344,345],"豁然悟空，了然見性。","凝然不動，寂然無思。",[],{"title":290,"content":348,"tags":351},[349,350],"多圖果何益，只自勞奔競。","不如收身心，凝然成靜定。",[],{"title":353,"content":354,"tags":363},"屬疾",[355,356,357,358,359,360,361,362],"精鶩成勤瘁，頤貞俟有瘳。","吟生南越思，慈結北憂。","粲枕甘爲蝶，豐厨厭炙牛。","玄元知寡欲，平子尚多愁。","夕鳥侵階啄，宵螢入樹流。","玉書能靜覽，柱史倦閑投。","忽賦行雲什，堪聽擊壤謳。","期君整朝佩，仙置在瀛洲。",[],{"title":365,"content":366,"tags":377},"清風十韻",[367,368,369,370,371,372,373,374,375,376],"仙御來相慰，解顔良會稀。","病蠲宜養素，趣遠欲忘機。","懲躁能無漸，延齡或可祈。","影摇珠箔細，聲泛細箏微。","委恨餘班扇，流歡入楚衣。","陶潛知夢穩，韓壽畏香飛。","氣爽蒼龍闕，凉生白虎闈。","健資雞距筆，偷撼獸鐶扉。","松下琴心逸，江東鱠縷肥。","宿懷真隠處，終約與同歸。",[],{"title":379,"content":380,"tags":383},"燕居",[381,382],"鍊礦成金得寶珍，鍊情成性合天真。","相逢此理交談者，千百人中無一人。",[],{"title":385,"content":386,"tags":391},"遊虎丘詩",[387,388,389,390],"餞別閶門復少留，故人邀我浣離愁。","旋沽美醖乘漁艇，急棹斜陽到虎丘。","千古劍池呀怪石，一方金地枕清流。","歸時眷戀情無限，不得從容秉燭遊。",[],{"title":393,"content":394,"tags":399},"假山",[395,396,397,398],"覆簣由心匠，多奇勢逼真。","盆池幽閒古，拳石翠峰新。","雲淡爐煙合，松滋樹影鄰。","不須同謝傅，對此已精神。",[],{"title":401,"content":402,"tags":407},"送何水部蒙出牧袁州",[403,404,405,406],"條教屬惟良，乘秋始辦裝。","朱轓重按部，白首尚爲郎。","督課民期富，從儒道益光。","更資談博物，千載楚萍鄉。",[],{"title":331,"content":409,"tags":412},[410,411],"宜城徵美醖，漢水得佳舫。","登峴思前哲，遊池醉夕陽。",[],{"title":414,"content":415,"tags":418},"句  其一",[416,417],"安得大金柅，制彼日月輪。","免同流水車，今人續古人。",[],{"title":420,"content":421,"tags":423},"句  其二",[422],"介居僧尚雜，警聽鶴猶聾。",[],{"title":425,"content":426,"tags":428},"句  其三",[427],"影外影爲三等妄，夢中夢是兩重虛。",[],{"title":430,"content":431,"tags":433},"句  其四",[432],"三臺八座九品官，名目不同而已矣。",[],{"title":435,"content":436,"tags":438},"句  其五",[437],"破暗用明明是用，非明非暗即惺惺。",[],{"title":440,"content":441,"tags":443},"句  其六",[442],"葉外應無葉，心中更有心。",[],{"title":445,"content":446,"tags":448},"句  其七",[447],"色空辨相何妨道，語默由心不礙禪。",[],{"title":450,"content":451,"tags":453},"句  其八",[452],"橋過涿水心先喜，路入雄州眼更明。",[],{"title":455,"content":456,"tags":458},"句  其九",[457],"昭然不昧處，靈照在胸中。",[],{"title":460,"content":461,"tags":463},"句  其一○",[462],"浮生七十今踰九，已是超羣越世人。",[],{"title":465,"content":466,"tags":468},"句  其一一",[467],"妄緣擾擾知縈己。",[],{"title":470,"content":471,"tags":473},"句  其一二",[472],"宴居寂寂堪修道。",[],{"title":475,"content":476,"tags":478},"句  其一三",[477],"明心了了思超世。",[],{"title":480,"content":481,"tags":483},"句  其一四",[482],"豈知習靜知常子，塵外天聲滿耳根。",[],{"title":485,"content":486,"tags":488},"句  其一五",[487],"耳音清亮好，最愛夢醒時。",[],{"title":490,"content":491,"tags":493},"句  其一六",[492],"文昭豈異天垂象，澤布還同雨灑溟。",[],{"title":495,"content":496,"tags":498},"句  其一七",[497],"鳳駕都門曉，凉風苑樹秋。",[],{"title":500,"content":501,"tags":503},"句  其一八",[502],"南郡正求賢太守，西垣須輟舊詞臣。",[],{"title":505,"content":506,"tags":508},"句  其一九",[507],"期月政成當事簡，不妨遊燕楚宮春。",[],{"title":510,"content":511,"tags":513},"句  其二○",[512],"羅含舍宇存遺址，熊繹封疆控廣津。",[],{"title":515,"content":516,"tags":518},"句  其二一",[517],"心如蓮花不著水，身似翔鴻不可籠。",[],{"title":520,"content":521,"tags":523},"句  其二二",[522],"清興比方心境妙，月明池浄白蓮開。",[],{"title":525,"content":526,"tags":528},"句  其二三",[527],"善思委順世間法，於本真心而不動。",[],{"title":530,"content":531,"tags":533},"句  其二四",[532],"芃芃麥壠驚翬起，灼灼桃園舞蝶來。",[],{"title":535,"content":536,"tags":538},"句  其二五",[537],"可能宴坐即宴坐，待全靜無全靜時。",[],{"title":540,"content":541,"tags":543},"存目",[542],"詩題：遊文潞公曲水園首句：夭桃穠李艷芳辰。",[],"content:chao-jiong.json","json","content","chao-jiong.json",[549,552,555,558,561,564,567,570,573,576,579,582,585,588,591,594,595,598,601,604,607,610,613,616,619,622,625,628,631,634,637,640,643,646,649,652,655,658,661,664,667,670,673,676,679,682,685,688,691,694,697,700,703,706,709,712,715,718,721,724,727,730,733,736,739,742,745,748,751,754,757,760,763,766,769,772,775,778,781,784,787,790,793,796,799,802,805,808,811,814,817,820,823,826,829,832,835,838,841,844,847,850,853,856,859,862,865,868,871,874,877,880,883,886,889,892,895,898,901,904,907,910,913,916,919,922,925,928,931,934,937,940,943,946,949,952,955,958,961,964,967,970,973,976,979,982,985,988,991,994,997,1000,1003,1006,1009,1012,1015,1018,1021,1024,1027,1030,1033,1036,1039,1042,1045,1048,1051,1054,1057,1060,1063,1066,1069,1072,1075,1078,1081,1084,1087,1090,1093,1096,1099,1102,1105,1108,1111,1114,1117,1120,1123,1126,1129,1132,1135,1138,1141,1144,1147,1150,1153,1156,1159,1162,1165,1168,1171,1174,1177,1180